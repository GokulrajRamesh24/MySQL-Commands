SELECT SALESPERSON,SUM(QUANTITY) AS TOTAL_QUANTITY FROM SALES GROUP BY SALESPERSON;
SELECT SALESPERSON,SUM(QUANTITY) AS TOTAL FROM SALES GROUP BY SALESPERSON HAVING TOTAL>5;
SELECT SALESPERSON,COUNT(PRODUCT) AS PRODUCTS_SOLD FROM SALES GROUP BY SALESPERSON;
SELECT REGION,SUM(SALEAMOUNT) AS TOTAL_SALE FROM SALES GROUP BY REGION HAVING TOTAL_SALE>1000;
SELECT SALESPERSON,SUM(QUANTITY) AS TOTAL FROM SALES GROUP BY SALESPERSON HAVING TOTAL>2;
SELECT PRODUCT,SUM(SALEAMOUNT) AS TOTAL_AMOUNT FROM SALES GROUP BY PRODUCT HAVING TOTAL_AMOUNT>500;
SELECT PRODUCT,REGION,SUM(QUANTITY) FROM SALES GROUP BY PRODUCT,REGION;
SELECT SALESPERSON,COUNT(PRODUCT) AS TOTAL_PRODUCT FROM SALES GROUP BY SALESPERSON HAVING TOTAL_PRODUCT>1;
SELECT REGION,PRODUCT,AVG(QUANTITY) AS AVERAGE_QUANTITY FROM SALES GROUP BY PRODUCT,REGION HAVING AVERAGE_QUANTITY>1;
SELECT SALESPERSON,SALEAMOUNT FROM SALES WHERE SALEAMOUNT BETWEEN 500 AND 1500;
SELECT SALESPERSON,SUM(QUANTITY) AS UNITS FROM SALES GROUP BY SALESPERSON ORDER BY UNITS DESC;
SELECT SALESPERSON, PRODUCT FROM SALES WHERE PRODUCT='LAPTOP';
SELECT SALESPERSON,REGION,SUM(SALEAMOUNT) AS TOTAL_AMOUNT FROM SALES GROUP BY SALESPERSON,REGION HAVING TOTAL_AMOUNT>500;
SELECT SALESPERSON,REGION,COUNT(PRODUCT) AS PRODUCTS FROM SALES GROUP BY REGION,SALESPERSON HAVING PRODUCTS>2;
SELECT PRODUCT,COUNT(REGION) AS REGIONS FROM SALES GROUP BY PRODUCT HAVING REGIONS>1;
SELECT PRODUCT,SUM(QUANTITY) AS TOTAL_SALES FROM SALES GROUP BY PRODUCT HAVING TOTAL_SALES>2;
SELECT REGION,SALESPERSON,SUM(QUANTITY) AS TOTAL_QUANTITY FROM SALES GROUP BY REGION,SALESPERSON;
SELECT SALESPERSON,SUM(QUANTITY) AS TRANSACTIONS,SUM(SALEAMOUNT) AS AMOUNT FROM SALES GROUP BY SALESPERSON HAVING TRANSACTIONS>3 AND AMOUNT>1000;
SELECT REGION,AVG(SALEAMOUNT) AS AVERAGE FROM SALES GROUP BY REGION HAVING AVERAGE>200;
SELECT REGION,PRODUCT,SUM(QUANTITY) AS PRODUCTS FROM SALES GROUP BY REGION,PRODUCT HAVING PRODUCTS>3;
